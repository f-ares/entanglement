#It computes the entanglement entropy in the ground state of the Long-Range Kitaev chain


#!/bin/bash
  
l=$1
l_max=$2
delta_l=$3
delta=$4
h=$5

old=0
  
while (( $(echo "$l < $l_max" | bc)==1)) ; do
  echo $l

  cat math_lrk_correl | sed "s%myl%$l%g" | sed "s%old_l%$old%g" | sed "s%mydelta%$delta%g" | sed "s%myh%$h%g" | math

  old=l+1;
  
  l=$(echo "$l + $delta_l" | bc)
done
